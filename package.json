{
	"private": true,
	"scripts": {
		"phplint": "php-cs-fixer fix --dry-run --config .php_cs --verbose",
		"eslint": "./node_modules/.bin/eslint ./resources/js/ --ext .js,.vue",
		"csslint": "stylelint './resources/**/*.vue' './resources/**/*.js' './resources/**/*.css'  './resources/**/*.scss'",
		"phplint-fix": "php-cs-fixer fix --config .php_cs --verbose ",
		"eslint-fix": "./node_modules/.bin/eslint ./resources/js/ --ext .js,.vue --fix",
		"csslint-fix": "stylelint './resources/**/*.vue' './resources/**/*.js' './resources/**/*.css'  './resources/**/*.scss'  --fix",
		"lint": "concurrently \"npm run eslint\" \"npm run csslint\" \"npm run phplint\"",
		"lint-fix": "concurrently \"npm run eslint-fix\" \"npm run csslint-fix\" \"npm run phplint-fix\"",
		"precommit": "npm run lint",
		"dev": "npm run development",
		"development": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
		"watch": "npm run development -- --watch",
		"watch-poll": "npm run watch -- --watch-poll",
		"hot": "cross-env NODE_ENV=development node_modules/webpack-dev-server/bin/webpack-dev-server.js --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
		"prod": "npm run production",
		"production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
		"heroku-postbuild": "npm run production"
	},
	"pre-commit": "precommit",
	"devDependencies": {
		"concurrently": "^4.1.0",
		"cross-env": "^5.1",
		"eslint": "^5.16.0",
		"eslint-plugin-vue": "^4.7.1",
		"laravel-mix": "2.1.14",
		"stylelint": "^9.10.1",
		"stylelint-config-recess-order": "^2.0.2",
		"stylelint-config-recommended-scss": "^3.3.0",
		"stylelint-config-standard": "^18.3.0",
		"stylelint-processor-html": "^1.0.0",
		"stylelint-scss": "^3.6.1",
		"stylelint-webpack-plugin": "^0.10.5",
		"webpack-livereload-plugin": "^1.2.0",
		"pre-commit": "^1.2.2",
		"sass-resources-loader": "^1.3.4",
		"vue-multiselect": "^2.1.6"
	},
	"dependencies": {
		"@fortawesome/fontawesome-free": "^5.8.1",
		"axios": "^0.18",
		"click-confirm": "^1.1.0",
		"jquery": "^3.4.1",
		"js-cookie": "^2.2.0",
		"laravel-vue-pagination": "^1.0.6",
		"popper.js": "^1.15.0",
		"toastr": "^2.1.4",
		"v-calendar": "^1.0.0-beta.8",
		"vee-validate": "^2.2.6",
		"vue": "^2.6.10",
		"vue-multiselect": "^2.1.6",
		"vue-range-slider": "^0.2.4",
		"vue-router": "^3.0.6",
		"vue-template-compiler": "^2.6.10",
		"vuejs-datepicker": "^0.9.11",
		"vuex": "^2.4.0",
		"vuex-persistedstate": "^2.0.0"
	}
}
